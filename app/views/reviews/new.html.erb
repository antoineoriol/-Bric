<% @product = Product.find(@booking.product_id) %>
<h1>Comment s'est passé votre location <strong class="text-muted"><%= @product.address %></strong>?</h1>
<div class="container">
  <%= simple_form_for [ @booking, @review ] do |f| %>
    <%= f.input :rating, collection: [1, 2, 3, 4, 5] %>
    <%= f.input :content, hint: "Parlez-nous de votre expérience avec #{@product.title}" %>
    <%= f.submit "Ajouter un commentaire", class: "btn btn-primary" %>
  <% end %>
</div>
