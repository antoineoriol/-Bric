
<div class="cover mb-4 d-flex align-items-center justify-content-center">
  <div class="text-center text-white">
   <h2 class="display-1 pt-5 mt-5">Ajouter un produit</h2>
  </div>
</div>
<div class="container d-flex flex-column card p-4 mb-4 shadow w-50 mx-auto">
  <div class="rental_form">
    <%= simple_form_for [ @product ] do |f| %>
      <%= f.input :title, label: 'Titre' %>
      <%= f.input :description, label: 'Description' %>
      <%= f.input :price, label: 'Prix à la semaine' %>
      <%= f.input :city, label: 'Ville' %>
      <%= f.input :address, label: 'Adresse' %>
      <%= f.input :capacity, label: 'Nombre de pièces' %>
      <%= f.input :photo, as: :file %>
      <div class="col text-center mt-5">
        <%= f.submit "Ajouter mon produit", class: "btn btn-outline-primary" %>
      </div>
    <% end %>
  </div>
</div>
