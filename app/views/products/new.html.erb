<div class="cover mb-4 d-flex align-items-center justify-content-center">
  <div class="text-center text-white">
   <h2 class="display-1 pt-5">Ajouter un produits</h2>
  </div>
</div>

<div class="container">
  <div class="rental_form">
    <%= simple_form_for [ @product ] do |f| %>
      <%= f.input :title, label: 'Titre' %>
      <%= f.input :description, label: 'Description' %>
      <%= f.input :price, label: 'Prix' %>
      <%= f.input :city, label: 'Ville' %>
      <%= f.input :address, label: 'Addresse' %>
      <%= f.input :start_date, label: 'Date de début souhaitée', as: :date, order: [:day, :month, :year] %>
      <%= f.input :end_date, label: 'Date de fin souhaitée', as: :date, order: [:day, :month, :year] %>
      <%= f.input :capacity, label: 'Nombre de pièces' %>
      <%= f.input :status, label: 'Available' %>
      <%= f.input :photo, as: :file %>
      <%= f.submit "Ajouter produits", class: "btn btn-outline-primary" %>
    <% end %>
  </div>
</div>
