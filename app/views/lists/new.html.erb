<div class="cover mb-4 d-flex align-items-center justify-content-center">
  <div class="text-center text-white">
   <h1 class="display-1 pt-5">Ma liste LEGOS</h1>
  </div>
</div>

<div class="container py-5">
  <div class="row">
    <div class="col-12 col-md-6 offset-lg-3">
      <div class="bg-white rounded p-3 shadow">
        <h3>Creer ma liste</h3>
        <%= simple_form_for @list do |f| %>
          <%= f.input :name, placeholder: 'Classic' %>
          <%= f.input :photo, as: :file %>
          <%= f.button type="submit", class: 'btn btn-outline-primary rounded-pill' %>
        <% end %>
      </div>
    </div>
  </div>
</div>
