<div class="cover mb-4 d-flex align-items-center justify-content-center">
  <div class="text-center text-white">
   <h1 class="display-1 pt-5">Ma liste LEGOS</h1>
  </div>
</div>

<div class="position-relative">
  <div class="card-category card-large" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%= cl_image_path @list.photo.key, height: 300, width: 400, crop: :fill %>)">
    <h2><%= @list.name %></h2>
  </div>
  <span class="product-tag"><%= pluralize(@list.products.size, "lego") %></span>
</div>

<div class="container mb-5">
  <div class="d-flex justify-content-between my-4">
    <span class="mb-2 d-block"><small><em class="text-muted"><%= "Vous n'avez pas encore enregistré de produits !" if @list.products.empty? %></em></small></span>
    <div>
      <button type="button" class="btn btn-outline-warning rounded-pill" data-bs-toggle="modal" data-bs-target="#new_product_modal">
        Ajouter un lego
      </button>
      <%= link_to "Supprimer ce lego", list_path(@list), class: "btn btn-outline-danger rounded-pill", data: { turbo_method: :delete, turbo_confirm: "Are you sure you want to delete this list?" } %>
    </div>
  </div>

  <hr class="my-5">
  <div class="row">
    <div class="col-12 col-sm-6">
      <h3>Commentaires</h3>
      <% if @list.reviews.empty? %>
        <small><em class="text-muted">Soyez le premier à consulter cette liste</em></small>
      <% end %>
      <% @list.reviews.each do |review| %>
        <div>
          <% review.rating.times do %>
            <i class="fas fa-star star-yellow"></i>
          <% end %>
          <small><em class="text-muted"><%= distance_of_time_in_words_to_now(review.created_at) %> depuis</em></small>
          <p class="mb-0"><%= review.comment %></p>
        </div>
        <hr>
      <% end %>
    </div>
    <div class="col-12 col-sm-6">
      <div class="bg-white rounded p-3">
        <h5>Ajoutez votre avis</h5>
        <%= simple_form_for [@list, @review] do |f| %>
          <%= f.input :comment, placeholder: "Ajoutez votre avis ici..." %>
          <%= f.input :rating, as: :select, collection: (1..5), required: true, prompt: "Quelle est votre note", input_html: { data: { controller: "star-rating" } } %>
          <%= f.submit class:"btn btn-flat" %>
        <% end %>
      </div>
    </div>
  </div>
</div>
